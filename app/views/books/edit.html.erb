<div class="edit">

 <h1>Editing Book</h1>
 
 <div class="edit-item">
  <!-- form_with部分 -->
  <%= form_with model:@book, local: true do |f| %>
  <div class="field">
    <h4>Title</h4>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <h4>Body</h4>
    <%= f.text_area :body %>
  </div>
  <%= f.submit '　Update Book　' %>
  <% end %>
 
 </div>

<div class="edit-part">
 <%= link_to "Show", book_path(@book.id) %>　<%= link_to "Back", books_path %>
</div>
  
</div>

